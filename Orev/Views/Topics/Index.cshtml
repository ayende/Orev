@model IEnumerable<Orev.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<h2>Topics List</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Narrator
        </th>
        <th>
            Language
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Narrator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id.ToIntId() }) |
            @Html.ActionLink("View", "View", new { id = item.Id.ToIntId() }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id.ToIntId() })
        </td>
    </tr>
}

</table>
